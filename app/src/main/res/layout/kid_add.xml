<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/kidImg"
            android:layout_width="220dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:clickable="true"
            app:srcCompat="@color/colorPrimaryDark" />

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/kidNameTIET"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:inputType="text"
                android:hint="اسم الطفل رباعيا" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/kidDateLayout"
            android:layout_alignEnd="@id/kidNameTIET"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp">
            <Spinner
                android:layout_width="wrap_content"
                android:entries="@array/myClasses"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_below="@id/kidDateLayout"
                />
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kidBDday"
                />
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kidBDmonth"
                />
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kidBDyear"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تاريخ الميلاد : "
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="البلدة الأصلية"
                android:id="@+id/oldCity"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/kidId"
                android:hint="رقم هوية الطفل"
                android:layout_marginStart="4dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp">
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="المؤهل العلمي للأب"
                android:layout_weight="1.2"
                android:id="@+id/kidFatherColg"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:hint="مهنة الأب"
                android:layout_weight=".8"
                android:layout_marginStart="4dp"
                android:id="@+id/kidFatherJob"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="رقم هوية الأب"
                android:layout_weight="1.2"
                android:layout_marginStart="4dp"
                android:id="@+id/kidFatherId"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp">
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="المؤهل العلمي للأم"
                android:layout_weight="1"
                android:id="@+id/kidMotherColg"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="مهنة الأم"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:id="@+id/kidMotherId"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:hint="ترتيب الطفل في الأسرة"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:id="@+id/kidFamilyRank"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="عدد أفراد الأسرة"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:id="@+id/kidFamilyNo"
                />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="العنوان كاملا"
            android:id="@+id/kidAddress"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/kidHomePhone"
                android:layout_weight="1"
                android:hint="الهاتف"
                android:layout_marginEnd="4dp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/kidFatherMobile"
                android:layout_weight="1"
                android:hint="جوال الأب"
                android:layout_marginEnd="4dp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/kidMotherMobile"
                android:layout_weight="1"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@color/gray"
            />

        <LinearLayout android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="أسئلة تتعلق بالطفل : "
                android:textColor="@color/Red"
                android:padding="4dp"
                android:textSize="20sp"
                android:fontFamily="casual"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="هل الطفل : "
                android:textSize="16sp"
                android:textColor="@color/Darkblue"/>

            <CheckBox
                android:id="@+id/kidQuestion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="التحق بروضة من قبل"
                />
            <CheckBox
                android:id="@+id/kidQuestion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="يعاني من اي مشاكل صحية"
                />
            <CheckBox
                android:id="@+id/kidQuestion3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="يستخدم اليد اليمنى"
                />
            <CheckBox
                android:id="@+id/kidQuestion4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="يستخدم اليد اليسرى"
                />
            <CheckBox
                android:id="@+id/kidQuestion5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="يحتاج لأخصائي نطق وتخاطب"
                />
            <CheckBox
                android:id="@+id/kidQuestion6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="أتم فحص النظر والسمع من قبل"
                />
            <CheckBox
                android:id="@+id/kidQuestion7"
                android:layout_width="wrap_content"
                android:text=" يشارك ألعابه مع أصدقائه أو إخوته"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/kidQuestion8"
                android:layout_weight=".6"
                android:hint="كم ساعة يجلس الطفل على التلفاز"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:id="@+id/kidQuestion9"
                android:hint="ينام الطفل الساعة"
                android:layout_marginStart="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:id="@+id/kidBusChoice"
                    android:gravity="center">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/kidBusYes"
                        android:text="لا"
                        android:textColor="@color/black"
                        android:layout_marginEnd="4dp"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/kidBusNo"
                        android:text="نعم"
                        android:textColor="@color/black"/>
                </RadioGroup>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="مواصلات   :     "
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:id="@+id/kidStudPeriChoice"
                    android:gravity="center">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/kidStudPeriMo"
                        android:text="مسائي"
                        android:textColor="@color/black"
                        android:layout_marginEnd="4dp"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/kidStudPeriEv"
                        android:text="صباحي"
                        android:textColor="@color/black"/>
                </RadioGroup>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="الفترة الدراسية   :     "
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>







    </LinearLayout>
</ScrollView>